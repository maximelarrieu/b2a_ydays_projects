{% extends 'base.html.twig' %}

{% block title %} Flockyou {% endblock %}
{% block body %}
    <h1 class="py-5 text-center"><i class="fas fa-film" style="margin-right: 10px"></i>News!<i class="fas fa-film"style="margin-left: 10px"></i></h1>
    <div class="row" style="margin-left: 8%">
        {% for movie in lastMovies %}
                {% include "_includes/card.html.twig" with {'movie': movie} %}
            {% for actor in movie.people %}
                <ul>
                    <li>{{ actor.lastName }}{{ actor.firstName }}</li>
                </ul>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}